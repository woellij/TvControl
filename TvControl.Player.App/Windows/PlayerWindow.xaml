<Window x:Class="TvControl.Player.App.Windows.PlayerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TvControl.Player.App"
        xmlns:viewModels="clr-namespace:TvControl.Player.App.ViewModels"
        mc:Ignorable="d" 
        Title="PlayerWindow" Height="600" Width="900">
    <Grid Background="Black" d:DataContext="{d:DesignInstance viewModels:TvControlViewModel}">
        <MediaElement VerticalAlignment="Stretch" HorizontalAlignment="Stretch" x:Name="MediaElement" x:FieldModifier="public" />
        <Grid Margin="50" Height="50" Visibility="Collapsed"   VerticalAlignment="Bottom" HorizontalAlignment="Stretch"  x:FieldModifier="public" x:Name="VolumeIndicator">
            <ProgressBar Background="White"  Minimum="0" Maximum="1" Value="{Binding Volume, Mode=OneWay}" />
            <TextBlock FontSize="40" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" Text="{Binding DisplayVolume}" />
        </Grid>
        <Border VerticalAlignment="Center" HorizontalAlignment="Center" Padding="20,10" Margin="40,20" Background="White" x:Name="MessageBox" Visibility="Collapsed">

            <TextBlock TextWrapping="Wrap" x:Name="MessageTextBlock" FontSize="34" />
        </Border>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="100" Height="100" Opacity="0" Click="ToggleFullscreenOnClick" />

        <Grid x:Name="StationIndicator" Visibility="Collapsed" Margin="50">
            <Grid Height="80"  VerticalAlignment="Top" HorizontalAlignment="Right" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <Image VerticalAlignment="Stretch" Margin="10,0" Source="{Binding SelectedStation.Image, Mode=OneWay}" />
                <Border Grid.Column="1" Background="White">
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" Margin="20,10" Foreground="Black" FontSize="34" Text="{Binding SelectedStation.Name, Mode=OneWay}" />
                </Border>
            </Grid>

            <StackPanel VerticalAlignment="Bottom">
                <Border Padding="20" Background="White" VerticalAlignment="Bottom" HorizontalAlignment="Stretch">
                    <StackPanel  >
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Sendung 1 " FontSize="30" />
                            <TextBlock Text="{Binding SelectedStation.Name}" FontSize="30" />
                        </StackPanel>
                        <ProgressBar Grid.Row="1" x:Name="ShowProgressBar" x:FieldModifier="public"  Value="80" Height="10" />

                        <TextBlock x:Name="ShowText" x:FieldModifier="public" Margin="0,10,0,0" Grid.Row="2" TextWrapping="Wrap" FontSize="24"
                                       
                              />

                    </StackPanel>
                </Border>


                <Border Margin="0,10,0,0" Padding="20" Grid.Column="1" Background="LightSteelBlue" >
                    <StackPanel >
                        <TextBlock Margin="0,0,0,5" Text="Danach" FontSize="24" FontWeight="Light" Foreground="#333" />

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Sendung 1 " FontSize="22" />
                            <TextBlock Text="{Binding SelectedStation.Name}" FontSize="22" />
                        </StackPanel>
                    </StackPanel>

                </Border>
            </StackPanel>
